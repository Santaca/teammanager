pipeline {
    agent {
        label 'nodejs-agent'
    }
    stages {
        stage('Source') {
            steps {
                git "https://github.com/Santaca/teammanager.git"
            }
        }
        stage('Unit Tests'){
            steps{
                sh 'mkdir logs'
                sh 'npm test > logs/test.log'
                archiveArtifacts artifacts: 'logs/test.log'
            }
        }
        stage('Build app'){
            steps{
                sh 'npm i && npm start'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
        failure {
            echo "Algo sali√≥ mal"
        }
    }
}
