pipeline {
    agent {
        label 'docker-agent'
    }

    environment {
        ECR_URI = "${ECR_URI}"
        REGION = "eu-west-3"
    }

    stages {
        stage('Source') {
            steps {
                git "https://github.com/Santaca/teammanager"
            }
        }
        stage('Build image') {
            steps {
                script {
                    dockerImage = docker.build 'unir/teammanager' 
                }
            }
        }
        stage('Push image') {
            steps {
                script {
                    sh 'aws ecr get-login-password --region ${REGION} | docker login --username AWS --password-stdin ${ECR_URI}'
                    sh 'docker push ${ECR_URI}'
                }
            }
        }
    }

}